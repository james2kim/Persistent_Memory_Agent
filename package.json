{
  "name": "persistent-memory-agent",
  "version": "1.0.0",
  "description": "A persistent memory agent project",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "server": "tsx src/server.ts",
    "server:dev": "tsx watch src/server.ts",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/__tests__/documentUtil.test.ts src/__tests__/utilTests.test.ts src/__tests__/memoryUtil.test.ts",
    "test:smoke": "vitest run src/__tests__/smoke.test.ts",
    "test:retrieval": "vitest run src/__tests__/retrieval.test.ts",
    "test:retrieval:memory": "vitest run src/__tests__/memoryRetrieval.test.ts",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "test:seed": "tsx src/__tests__/seed.ts",
    "test:seed:memories": "tsx src/__tests__/seedMemories.ts",
    "migrate": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@langchain/anthropic": "1.3.12",
    "@langchain/community": "^1.1.15",
    "@langchain/core": "1.1.17",
    "@langchain/langgraph": "^1.1.2",
    "@langchain/textsplitters": "^1.0.1",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "better-sqlite3": "^12.6.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "knex": "^3.1.0",
    "langchain": "^1.2.12",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.4",
    "pg": "^8.18.0",
    "redis": "^5.10.0",
    "voyageai": "^0.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "eslint": "^9",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "^8",
    "vitest": "^4.0.18"
  }
}
