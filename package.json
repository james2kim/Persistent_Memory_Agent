    "langchain": "^1.2.12",
    "pg": "^8.18.0",
    "redis": "^5.10.0",
    "voyageai": "^0.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "eslint": "^9",
    "prettier": "^3.8.0",
